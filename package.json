{
    "name": "isolate",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "lint:runes": "node scripts/lint-runes.cjs",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:e2e:tauri": "wdio run ./wdio.conf.ts",
        "test:e2e:tauri:watch": "wdio run ./wdio.conf.ts --watch",
        "tauri": "tauri",
        "postinstall": "pwsh -ExecutionPolicy Bypass -File scripts/download-binaries.ps1",
        "download-binaries": "pwsh -ExecutionPolicy Bypass -File scripts/download-binaries.ps1",
        "download-binaries:force": "pwsh -ExecutionPolicy Bypass -File scripts/download-binaries.ps1 -Force"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.0",
        "@sveltejs/adapter-static": "^3.0.0",
        "@sveltejs/kit": "^2.50.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tauri-apps/cli": "^2.0.0",
        "@testing-library/svelte": "^5.3.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.0.10",
        "autoprefixer": "^10.4.0",
        "happy-dom": "^20.3.9",
        "postcss": "^8.4.0",
        "svelte": "^5.48.2",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.0.0",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "@tauri-apps/api": "^2.0.0",
        "@tauri-apps/plugin-dialog": "^2.4.2",
        "@tauri-apps/plugin-fs": "^2.4.4",
        "@tauri-apps/plugin-shell": "^2.0.0",
        "@types/qrcode": "^1.5.6",
        "qrcode": "^1.5.4"
    }
}